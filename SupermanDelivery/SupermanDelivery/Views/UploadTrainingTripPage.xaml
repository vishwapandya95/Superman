            </Frame>-->
            <!--#endregion-->


            <Grid Margin="15" RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>

                <!--#region UPLOAD DOCUMENT-->
                <Frame
                    Grid.Row="0"
                    Grid.Column="0"
                    Padding="0"
                    BackgroundColor="{x:StaticResource PrimaryAxisPink}"
                    CornerRadius="100"
                    HeightRequest="70"
                    HorizontalOptions="CenterAndExpand"
                    IsClippedToBounds="True"
                    VerticalOptions="Center"
                    WidthRequest="70">

                    <Frame
                        Padding="0"
                        BackgroundColor="{x:StaticResource PrimaryWhite}"
                        CornerRadius="100"
                        HeightRequest="50"
                        HorizontalOptions="CenterAndExpand"
                        IsClippedToBounds="True"
                        VerticalOptions="Center"
                        WidthRequest="50">

                        <Label
                            HorizontalOptions="Center"
                            Scale="2"
                            Text="1"
                            TextColor="Black"
                            VerticalOptions="Center" />

                    </Frame>
                </Frame>
                <Frame Grid.Row="0" Grid.Column="1">
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal"
                        VerticalOptions="FillAndExpand">
                        <StackLayout
                            HorizontalOptions="FillAndExpand"
                            Orientation="Vertical"
                            VerticalOptions="FillAndExpand">
                            <Label
                                FontSize="Subtitle"
                                HorizontalOptions="StartAndExpand"
                                Text="Upload documents"
                                TextColor="black" />
                            <Label
                                FontSize="Micro"
                                HorizontalOptions="StartAndExpand"
                                Text="Driving licence, Aadhar card, etc."
                                TextColor="Gray" />
                        </StackLayout>
                        <Image
                            HeightRequest="05"
                            Source="side"
                            WidthRequest="15" />
                    </StackLayout>
                </Frame>
                <!--#endregion-->

                <!--#region TRAINING-->
                <Frame
                    Grid.Row="1"
                    Grid.Column="0"
                    Padding="0"
                    BackgroundColor="{x:StaticResource PrimaryGrey}"
                    CornerRadius="100"
                    HeightRequest="70"
                    HorizontalOptions="CenterAndExpand"
                    IsClippedToBounds="True"
                    VerticalOptions="Center"
                    WidthRequest="70">

                    <Frame
                        Padding="0"
                        BackgroundColor="{x:StaticResource PrimaryWhite}"
                        CornerRadius="100"
                        HeightRequest="50"
                        HorizontalOptions="CenterAndExpand"
                        IsClippedToBounds="True"
                        VerticalOptions="Center"
                        WidthRequest="50">

                        <Label
                            HorizontalOptions="Center"
                            Scale="2"
                            Text="2"
                            TextColor="Black"
                            VerticalOptions="Center" />

                    </Frame>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="1">
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal"
                        VerticalOptions="FillAndExpand">
                        <StackLayout
                            HorizontalOptions="FillAndExpand"
                            Orientation="Vertical"
                            VerticalOptions="FillAndExpand">
                            <Label
                                FontSize="Subtitle"
                                HorizontalOptions="StartAndExpand"
                                Text="Training"
                                TextColor="black" />
                            <Label
                                FontSize="Micro"
                                HorizontalOptions="StartAndExpand"
                                Text="Get self trained on how to use the app"
                                TextColor="Gray" />
                        </StackLayout>
                        <Image
                            HeightRequest="05"
                            Source="side"
                            WidthRequest="15" />
                    </StackLayout>
                </Frame>
                <!--#endregion-->

                <!--#region FIRST TRIP-->
                <Frame
                    Grid.Row="2"
                    Grid.Column="0"
                    Padding="0"
                    BackgroundColor="{x:StaticResource PrimaryAxisPink}"
                    CornerRadius="100"
                    HeightRequest="70"
                    HorizontalOptions="CenterAndExpand"
                    IsClippedToBounds="True"
                    VerticalOptions="Center"
                    WidthRequest="70">

                    <Frame
                        Padding="0"
                        BackgroundColor="{x:StaticResource PrimaryWhite}"
                        CornerRadius="100"
                        HeightRequest="50"
                        HorizontalOptions="CenterAndExpand"
                        IsClippedToBounds="True"
                        VerticalOptions="Center"
                        WidthRequest="50">

                        <Label
                            HorizontalOptions="Center"
                            Scale="2"
                            Text="3"
                            TextColor="Black"
                            VerticalOptions="Center" />

                    </Frame>
                </Frame>
                <Frame Grid.Row="2" Grid.Column="1">
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal"
                        VerticalOptions="FillAndExpand">
                        <StackLayout
                            HorizontalOptions="FillAndExpand"
                            Orientation="Vertical"
                            VerticalOptions="FillAndExpand">
                            <Label
                                FontSize="Subtitle"
                                HorizontalOptions="StartAndExpand"
                                Text="Get your first trip"
                                TextColor="black" />
                            <Label
                                FontSize="Micro"
                                HorizontalOptions="StartAndExpand"
                                Text="You are ready to do your first trip"
                                TextColor="Gray" />
                        </StackLayout>
                        <Image
                            HeightRequest="05"
                            Source="side"
                            WidthRequest="15" />
                    </StackLayout>
                </Frame>
                <!--#endregion-->

            </Grid>
            <ImageButton
                AbsoluteLayout.LayoutBounds=".95,.95,60,60"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Command="{Binding NavigateToComposeCommand}"
                Source="ic_help" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>